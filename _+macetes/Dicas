Number.parseInt() //somente numero inteiro
Number.parseFloat() //somente numero com virgula 
Number() //numero com virugla e inteiro 
    

                        //TRANSFORMANDO STRING EM NUMERO//
    var n1 = Number(window.prompt('Digite um numero'))
    var n2 = Number(window.prompt('Digite outro numero')) 
    var soma = n1+n2 
    window.alert('A soma dos 2 numeros é '+soma)

//------------------------------------------------------------------------------

String() //Transforma numero em Letra.//
blablabla.toString() //Tambem transforma Numero em Letras

//OBS: A soma de Duas letras ou palavras da o nomde concatenação//


                    //TRANSFORMANDO  NUMERO EM STRING//
    var n1 = String((window.prompt('Digite um numero')))//Sring
    var n2 = String((window.prompt('Digite outro numero'))) //String
    var soma = n1+n2 
    window.alert('A soma dos 2 numeros é '+soma)//Concatenação 

                                //OU
    var n1 = Number(window.prompt('Digite um numero'))//Numero
    var n2 = Number(window.prompt('Digite outro numero'))//Numero
    var soma = n1+n2.toString//String
    window.alert('A soma dos 2 numeros é '+soma) //Concatenação

